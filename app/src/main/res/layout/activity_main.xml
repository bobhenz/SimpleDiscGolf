<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="top"
    android:orientation="vertical"
    android:background="#000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/id_button_tee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tee"
            android:layout_margin="5dp"
            android:background="@drawable/button_dark"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/id_button_basket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bas"
            android:layout_margin="5dp"
            android:background="@drawable/button_dark"
            android:textColor="#ffffff" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/id_button_throw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1     |     Throw 100.25 ft"
            android:layout_margin="5dp"
            android:background="@drawable/button_dark"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/id_button_rmthrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="X"
            android:layout_margin="5dp"
            android:background="@drawable/button_dark"
            android:textColor="#ffffff" />
    </LinearLayout>
    <Button
        android:id="@+id/id_button_addthrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Throw"
        android:layout_margin="5dp"
        android:background="@drawable/button_dark"
        android:textColor="#ffffff" />

</LinearLayout>
