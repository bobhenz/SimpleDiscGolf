<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#0f0f0f" />
            <stroke
                android:width="4dp"
                android:color="#f0f0f0" />
            <corners
                android:radius="10dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#000000" />
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <corners
                android:radius="10dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</selector>